<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dota2HeroGridCustomizer-addHeroTranslationsByFileHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.load.AddHeroTranslationsByFileHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileImporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToEntityMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-restoreHeroNamesHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.restore.RestoreHeroNamesHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorageRestorer"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToEntityMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-backupHeroTranslationFileHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.BackupHeroTranslationFileHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-fileBackuper-main"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-storeHeroNamesHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.StoreHeroNamesHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorage"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToEntityMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-replaceHeroNamesInTranslationsFileHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.ReplaceHeroNamesInTranslationsFileHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesIntoFileExporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToEntityMapper"/>
    </bean>
</beans>