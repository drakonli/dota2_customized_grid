<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dota2HeroGridCustomizer-heroGridVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.models.HeroGridCustomizationVM">
    </bean>

    <bean id="dota2HeroGridCustomizer-exportImportByFileVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.models.ExportImportHeroGridCustomizationByFileVM">
    </bean>

    <bean id="dota2HeroGridCustomizer-exportImportHeroGridByLatestSaveVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.models.ImportHeroGridCustomizationByLatestExportVM">
        <constructor-arg ref="dota2HeroGridCustomizer-initialValueForFileStorageRestoreAvailability"/>
    </bean>

    <bean id="dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager"
          class="drakonli.dota2.hero_grid_customizer.application.services.FileStorageImportByLatestExportAvailabilityManager">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridCustomizationByFileStorage"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-initialValueForFileStorageRestoreAvailability"
          class="javafx.beans.property.SimpleBooleanProperty">
        <constructor-arg
                value="#{ dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager.isImportByLatestExportAvailable() }"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroGridCustomizationToViewModelsMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.services.HeroGridCustomizationToViewModelsMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-basicExportConfigIntoFileAction"
            class="drakonli.dota2.hero_grid_customizer.application.action.config_export.dota_translation_file.BasicExportConfigIntoFileAction">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridConfigToDota2TranslationsFileExporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridCustomizationByHeroNamesCustomizationVMFactory"/>
        <constructor-arg ref="dota2HeroGridCustomizer-applicationEventPublisherAwareExportConfigIntoFileActionEventPublisher"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-applicationEventPublisherAwareExportConfigIntoFileActionEventPublisher"
          class="drakonli.dota2.hero_grid_customizer.application.action.config_export.dota_translation_file.event.publisher.ApplicationEventPublisherAwareExportConfigIntoFileActionEventPublisher">
    </bean>

    <bean id="dota2HeroGridCustomizer-SetRestoreAvailableBeforeExportConfigIntoFileActionEventListener"
          class="drakonli.dota2.hero_grid_customizer.application.action.config_export.dota_translation_file.event.listener.SetImportByLatestExportAvailableEventListener">
        <constructor-arg ref="dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportHeroGridByLatestSaveVM"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-basicImportConfigFromFileAction"
          class="drakonli.dota2.hero_grid_customizer.application.action.hero_grid_customization.import_customization.from_file.BasicImportHeroGridCustomizationFromFileAction">
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByDota2TranslationsFileImporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridCustomizationToViewModelsMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-basicImportConfigFromFileAction-setCurrentFileDecorated"
          class="drakonli.dota2.hero_grid_customizer.application.action.hero_grid_customization.import_customization.from_file.decorator.SetCurrentFileDecorator">
        <constructor-arg ref="dota2HeroGridCustomizer-basicImportConfigFromFileAction"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportByFileVM"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-importHeroGridCustomizationFromFileAction"
          parent="dota2HeroGridCustomizer-basicImportConfigFromFileAction-setCurrentFileDecorated"/>

    <bean id="dota2HeroGridCustomizer-importConfigFromStorageByLatestSaveAction"
          class="drakonli.dota2.hero_grid_customizer.application.action.hero_grid_customization.import_customization.latest_save.ImportHeroGridCustomizationFromStorageByLatestSaveAction">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridCustomizationByFileStorage"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridCustomizationToViewModelsMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroGridCustomizationByHeroNamesCustomizationVMFactory"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.services.HeroGridCustomizationByViewModelsFactory"/>
</beans>