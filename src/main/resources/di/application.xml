<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/util  http://www.springframework.org/schema/util/spring-util.xsd">

    <util:list id="dota2HeroGridCustomizer-restoreHeroNamesButtonViewHandlers">
        <ref bean="dota2HeroGridCustomizer-restoreHeroNamesHandler"/>
    </util:list>

    <bean id="dota2HeroGridCustomizer-heroGridVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.models.HeroGridViewModel">
    </bean>

    <bean id="dota2HeroGridCustomizer-exportImportByFileVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.models.ExportImportHeroGridByFileViewModel">
    </bean>

    <bean id="dota2HeroGridCustomizer-exportImportHeroGridByLatestSaveVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.models.ExportImportHeroGridByLatestSaveViewModel">
        <constructor-arg ref="dota2HeroGridCustomizer-initialValueForFileStorageRestoreAvailability"/>
    </bean>

    <bean id="dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager"
          class="drakonli.dota2.hero_grid_customizer.application.services.FileStorageRestoreAvailabilityManager">
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorage"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-initialValueForFileStorageRestoreAvailability"
          class="javafx.beans.property.SimpleBooleanProperty">
        <constructor-arg
                value="#{ dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager.isRestoreAvailable() }"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.services.HeroTranslationsToViewModelMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.services.HeroTranslationViewModelsToDomainModelMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-restoreHeroNamesHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.restore.RestoreHeroNamesHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorageRestorer"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-basicExportConfigIntoFileAction"
            class="drakonli.dota2.hero_grid_customizer.application.action.config_export.dota_translation_file.BasicExportConfigIntoFileAction">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridConfigToDota2TranslationsFileExporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-applicationEventPublisherAwareExportConfigIntoFileActionEventPublisher"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-applicationEventPublisherAwareExportConfigIntoFileActionEventPublisher"
          class="drakonli.dota2.hero_grid_customizer.application.action.config_export.dota_translation_file.event.publisher.ApplicationEventPublisherAwareExportConfigIntoFileActionEventPublisher">
    </bean>

    <bean id="dota2HeroGridCustomizer-SetRestoreAvailableBeforeExportConfigIntoFileActionEventListener"
          class="drakonli.dota2.hero_grid_customizer.application.action.config_export.dota_translation_file.event.listener.SetRestoreAvailableAfterExportConfigIntoFileActionEventListener">
        <constructor-arg ref="dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportHeroGridByLatestSaveVM"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-basicImportConfigFromFileAction"
          class="drakonli.dota2.hero_grid_customizer.application.action.config_import.dota_translation_file.BasicImportConfigFromFileAction">
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByDota2TranslationsFileImporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-basicImportConfigFromFileAction-setCurrentFileDecorated"
          class="drakonli.dota2.hero_grid_customizer.application.action.config_import.dota_translation_file.decorator.SetCurrentFileDecorator">
        <constructor-arg ref="dota2HeroGridCustomizer-basicImportConfigFromFileAction"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportByFileVM"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-importConfigFromFileAction"
          parent="dota2HeroGridCustomizer-basicImportConfigFromFileAction-setCurrentFileDecorated"/>
</beans>