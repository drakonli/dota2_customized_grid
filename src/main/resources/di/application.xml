<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/util  http://www.springframework.org/schema/util/spring-util.xsd">

    <util:list id="dota2HeroGridCustomizer-saveHeroNamesIntoFileButtonViewHandlers">
        <ref bean="dota2HeroGridCustomizer-backupHeroTranslationFileHandler"/>
        <ref bean="dota2HeroGridCustomizer-storeHeroNamesHandler"/>
        <ref bean="dota2HeroGridCustomizer-replaceHeroNamesInTranslationsFileHandler"/>
        <ref bean="dota2HeroGridCustomizer_restoreAvailabilityHandler"/>
    </util:list>

    <util:list id="dota2HeroGridCustomizer-restoreHeroNamesButtonViewHandlers">
        <ref bean="dota2HeroGridCustomizer-restoreHeroNamesHandler"/>
    </util:list>

    <util:list id="dota2HeroGridCustomizer-loadHeroNamesFileButtonViewHandlers">
        <ref bean="dota2HeroGridCustomizer-addHeroTranslationsByFileHandler"/>
    </util:list>

    <bean id="dota2HeroGridCustomizer-heroGridVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.grid.HeroGridViewModel">
    </bean>

    <bean id="dota2HeroGridCustomizer-exportImportByFileVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.export_import.file.ExportImportHeroGridByFileViewModel">
    </bean>

    <bean id="dota2HeroGridCustomizer-exportImportHeroGridByLatestSaveVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.export_import.latest.ExportImportHeroGridByLatestSaveViewModel">
        <constructor-arg ref="dota2HeroGridCustomizer-initialValueForFileStorageRestoreAvailability"/>
    </bean>

    <bean id="dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager"
          class="drakonli.dota2.hero_grid_customizer.application.services.FileStorageRestoreAvailabilityManager">
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorage"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-initialValueForFileStorageRestoreAvailability"
          class="javafx.beans.property.SimpleBooleanProperty">
        <constructor-arg
                value="#{ dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager.isRestoreAvailable() }"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.translation.HeroTranslationsToViewModelMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.translation.HeroTranslationViewModelsToDomainModelMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-addHeroTranslationsByFileHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.load.AddHeroTranslationsByFileHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportByFileVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileImporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-restoreHeroNamesHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.restore.RestoreHeroNamesHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorageRestorer"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer_restoreAvailabilityHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.RestoreAvailabilityHandler">
        <constructor-arg ref="dota2HeroGridCustomizer_fileStorageRestoreAvailabilityManager"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportHeroGridByLatestSaveVM"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-backupHeroTranslationFileHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.BackupHeroTranslationFileHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportByFileVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-fileBackuper-main"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-storeHeroNamesHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.StoreHeroNamesHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorage"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-replaceHeroNamesInTranslationsFileHandler"
          class="drakonli.dota2.hero_grid_customizer.application.view_handler.save.ReplaceHeroNamesInTranslationsFileHandler">
        <constructor-arg ref="dota2HeroGridCustomizer-heroGridVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-exportImportByFileVM"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesIntoFileExporter"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"/>
    </bean>
</beans>