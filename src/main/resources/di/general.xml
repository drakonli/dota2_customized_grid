<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
     http://www.springframework.org/schema/util  http://www.springframework.org/schema/util/spring-util.xsd">

    <util:constant id="dota2HeroGridCustomizer-translationsFileCharset"
                   static-field="java.nio.charset.StandardCharsets.UTF_16LE"/>

    <util:list id="dota2HeroGridCustomizer-TranslationFileDirectoryGuesses">
        <value>C:\Program Files (x86)\Steam\steamapps\common\dota 2 beta\game\dota\resource</value>
        <value>C:\Program Files\Steam\steamapps\common\dota 2 beta\game\dota\resource</value>
    </util:list>

    <bean id="dota2HeroGridCustomizer-fileBackuper-main"
          class="drakonli.jcomponents.file.backuper.FileBackuper">
    </bean>

    <bean id="dota2HeroGridCustomizer-txtFileByLineEditor-main"
          class="drakonli.jcomponents.file.editor.txt.tmp.TmpTxtFileByLineEditor">
        <constructor-arg value="txt_by_line_editor"/>
        <constructor-arg value=".tmp"/>
        <constructor-arg ref="dota2HeroGridCustomizer-dota2TranslationReaderFactory"/>
        <constructor-arg ref="dota2HeroGridCustomizer-dota2TranslationWriterFactory"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-notificator-main"
          class="drakonli.jcomponents.notificator.AlertNotificator">
    </bean>

    <bean id="dota2HeroGridCustomizer-heroGridVM"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.grid.HeroGridViewModel">
    </bean>

    <bean id="dota2HeroGridCustomizer-fileChooserFactory-main"
          class="drakonli.jcomponents.file.chooser.GuessedDirectoryTxtFileChooserFactory">
        <constructor-arg ref="dota2HeroGridCustomizer-TranslationFileDirectoryGuesses"/>
        <constructor-arg>
            <list>
                <value>*.txt</value>
            </list>
        </constructor-arg>
        <constructor-arg value="TEXT files (*.txt)"/>
        <constructor-arg value="Open dota2 translations file"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationByFileLineExtractor"
          class="drakonli.dota2.hero_grid_customizer.domain.component.hero.names.file.extractor.HeroTranslationByFileLineExtractor">
    </bean>

    <bean id="dota2HeroGridCustomizer-dota2TranslationReaderFactory"
          class="drakonli.jcomponents.file.reader.buffered.charset.BufferedCharsetFileReaderFactory">
        <constructor-arg ref="dota2HeroGridCustomizer-translationsFileCharset"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-dota2TranslationWriterFactory"
          class="drakonli.jcomponents.file.writer.factory.BufferedCharsetFileWriterFactory">
        <constructor-arg ref="dota2HeroGridCustomizer-translationsFileCharset"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationsToViewModelMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.translation.HeroTranslationsToViewModelMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-heroTranslationViewModelsToDomainModelMapper"
          class="drakonli.dota2.hero_grid_customizer.application.view_model.translation.HeroTranslationViewModelsToDomainModelMapper">
    </bean>

    <bean id="dota2HeroGridCustomizer-heroNamesByFileImporter"
          class="drakonli.dota2.hero_grid_customizer.domain.component.hero.names.file.importer.HeroNamesByFileImporter">
        <constructor-arg ref="dota2HeroGridCustomizer-dota2TranslationReaderFactory"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationByFileLineExtractor"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroNamesByFileStorage"
          class="drakonli.dota2.hero_grid_customizer.domain.component.hero.names.file.storage.HeroNamesByFileStorage">
    </bean>

    <bean id="dota2HeroGridCustomizer-heroNamesByFileStorageRestorer"
          class="drakonli.dota2.hero_grid_customizer.domain.component.hero.names.restorer.HeroNamesByFileStorageRestorer">
        <constructor-arg ref="dota2HeroGridCustomizer-heroNamesByFileStorage"/>
    </bean>

    <bean id="dota2HeroGridCustomizer-heroNamesIntoFileExporter"
          class="drakonli.dota2.hero_grid_customizer.domain.component.hero.names.file.exporter.HeroNamesIntoFileExporter">
        <constructor-arg ref="dota2HeroGridCustomizer-txtFileByLineEditor-main"/>
        <constructor-arg ref="dota2HeroGridCustomizer-heroTranslationByFileLineExtractor"/>
    </bean>
</beans>